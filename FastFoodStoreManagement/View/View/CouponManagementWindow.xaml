<Window x:Class="View.CouponManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="CouponManagementWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1) Thanh menu -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FF5B5B">
                <TextBlock Text="Logo" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="16" FontWeight="Bold"/>
            </Border>

            <Button Grid.Column="1" Content="Shift Management" Background="#FFEFA0" BorderBrush="LightGray" Click="BtnShift_Click"/>
            <Button Grid.Column="2" Content="Coupon Management" Background="White" BorderBrush="LightGray" Click="BtnCoupon_Click"/>
            <Button Grid.Column="3" Content="Stock Management" Background="#FFEFA0" BorderBrush="LightGray"/>
            <Button Grid.Column="4" Content="Nhập kho / Xuất kho" Background="#FFEFA0" BorderBrush="LightGray"/>
            <Button Grid.Column="5" Content="Report" Background="#FFEFA0" BorderBrush="LightGray"/>
            <Button Grid.Column="6" Content="Menu Manager" Background="#FFEFA0" BorderBrush="LightGray"/>
        </Grid>

       

        <!-- 3) DataGrid hiển thị nhân viên -->
        <DataGrid Grid.Row="2" Margin="20" AutoGenerateColumns="False" CanUserAddRows="False"
              ItemsSource="{Binding Employees}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Coupon" Binding="{Binding MaCoupon}" Width="100"/>
                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding NgayTao}" Width="100"/>
                <DataGridTextColumn Header="Ngày hết hạn" Binding="{Binding NgayHetHan}" Width="100"/>
                <DataGridTextColumn Header="Loại" Binding="{Binding Loai}" Width="100"/>
                <DataGridTextColumn Header="Giá trị" Binding="{Binding GiaTri}" Width="100"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="100"/>
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" Width="60" Height="25"
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <ContentControl x:Name="MainContent" Grid.Row="2" />

        <!-- 4) Nút Create -->
        <Button Grid.Row="3" Content="Create" Width="100" Height="35" Margin="20"
    HorizontalAlignment="Left"
    Click="Create_Click"/>
    </Grid>
</Window>
