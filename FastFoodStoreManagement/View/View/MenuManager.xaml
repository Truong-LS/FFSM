<Window x:Class="View.MenuManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Manager" Height="820" Width="1150" WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel Orientation="Vertical">

            <!-- Top Navigation Bar -->
            <Grid Height="50" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*"/>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Border Background="Tomato" Grid.Column="0" Margin="1" CornerRadius="3">
                    <TextBlock Text="Logo"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>
                <Button Content="Shift Management"
                        Background="Gold"
                        Grid.Column="1"
                        Margin="1"
                        FontWeight="Bold"/>
                <Button Content="Coupon Management"
                        Background="Gold"
                        Grid.Column="2"
                        Margin="1"
                        FontWeight="Bold"/>
                <Button Content="Stock Management"
                        Background="Gold"
                        Grid.Column="3"
                        Margin="1"
                        FontWeight="Bold"/>
                <Button Content="Nhập kho / xuất kho"
                        Background="Gold"
                        Grid.Column="4"
                        Margin="1"
                        FontWeight="Bold"/>
                <Button Content="Report"
                        Background="Gold"
                        Grid.Column="5"
                        Margin="1"
                        FontWeight="Bold"/>
                <Button Content="Menu Manager"
                        Background="White"
                        Grid.Column="6"
                        Margin="1"
                        BorderBrush="Black"
                        BorderThickness="2"
                        FontWeight="Bold"/>
            </Grid>

            <!-- Add Button -->
