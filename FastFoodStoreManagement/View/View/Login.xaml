<Window x:Class="View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f3"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style for TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2980b9"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2980b9"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Background="White" Grid.Column="0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Fastfood"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Management System"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#7f8c8d"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Welcome Back!"
                           FontSize="18"
                           Margin="0,20,0,0"
                           Foreground="#2980b9"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel (No Background) -->
        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="320">

                <!-- Header -->
                <Border Background="#3498db"
                        Padding="18"
                        Margin="0,0,0,25">
                    <TextBlock Text="Login to Continue"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Username -->
                <TextBlock Text="Username"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#2c3e50"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#2c3e50"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             FontSize="14"
                             Margin="0,0,0,25"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="40"
                        Width="160"
                        Background="#e74c3c"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="15"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        HorizontalAlignment="Center">
                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="10"
                                          ShadowDepth="2"
                                          Opacity="0.4"/>
                    </Button.Effect>
                </Button>

                <!-- Forgot Password -->
                <TextBlock Text="Forgot Password?"
                           Foreground="#7f8c8d"
                           FontSize="12"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           TextDecorations="Underline"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
